<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox stylesheets="@mobile-styles.css" prefHeight="400.0" prefWidth="366.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="calendarapp.SettingsController">
   <children>
      <ToolBar prefHeight="40.0" prefWidth="200.0">
        <items>
           <Button fx:id="backButton" text="Back" onAction="#handleBack"/>
           <Button fx:id="saveButton" text="Save" onAction="#handleSave"/>
        </items>
      </ToolBar>
      <Label text="User Settings">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <CheckBox fx:id="notificationsCheckBox" mnemonicParsing="false" text="Enable Notifications" />
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
         <children>
            <ColorPicker fx:id="themeColorPicker"/>
            <Label text="Color Theme" />
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextField fx:id="sessionLengthField"/>
            <Label text="Study Session Length in Minutes" />
         </children>
      </HBox>
   </children>
</VBox>
